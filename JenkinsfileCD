def skipdelta(def isDelta=false){

		if(params.FUll_Deployment == false){
			isDelta=true
		}

		return isDelta
	}



pipeline {
    agent any
	parameters {
            booleanParam (
                defaultValue: false,
                description: 'Select only when you want to do full Deployment',
                name : 'FUll_Deployment')
        }

	environment {
		currentBuildNumber = "${env.BUILD_NUMBER}"
	}

	tools {
            maven 'Maven 3.6.3'
            jdk 'jdk8'

     }
    stages {
        stage('Full Deploy') {
        when {
                        expression {
                            return  params.FUll_Deployment
                        }
        }
            steps {
             withKubeConfig([credentialsId: 'jenkins-robot', serverUrl: 'http://127.0.0.1:54520' ])
                echo 'Building..'
				sh 'kubectl config view'
            }
        }
    	stage('Delta Deploy') {
         when {
                                expression {
                                	skipdelta()
                                }
           }
            steps {
                echo 'Delta Deploy..'

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'

            }
        }
     }
}
