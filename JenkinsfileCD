pipeline {
    agent any

	environment {
		currentBuildNumber = "${env.BUILD_NUMBER}"
	}

	tools {
            maven 'Maven 3.6.3'
            jdk 'jdk8'

     }


    stages {
        stage('Full Deploy') {
        when {
                        expression {
                            return  params.FUll_Deployment
                        }
        }
            steps {

				sh '/usr/local/bin/kubectl apply -f kube_deployment.yaml '

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
				sh 'cd functionalTest'
				sh 'mvn test'

            }
        }
     }
}
