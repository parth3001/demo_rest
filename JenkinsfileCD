pipeline {
    agent any

	environment {
		currentBuildNumber = "${env.BUILD_NUMBER}"
	}

	tools {
            maven 'Maven 3.6.3'
            jdk 'jdk8'

     }


    stages {
        stage('Full Deploy') {
        steps {

				sh '/usr/local/bin/kubectl apply -f kube_deployment.yaml '

            }
        }
        stage('Test') {
        serviceClusteIP = sh(
            script: "/usr/local/bin/kubectl describe service books-service | grep IP | awk '{print $2}'",
            returnStdout: true,
          )
            steps {
                echo 'Testing..'
				sh 'mvn -f functionalTest/pom.xml test -Dserver.basehost=http://${serviceClusterIP}'
            }
        }
     }
}
