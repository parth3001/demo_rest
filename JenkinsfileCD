def skipdelta(def isDelta=false){

		if(params.FUll_Deployment == false){
			isDelta=true
		}

		return isDelta
	}



pipeline {
    agent any
	parameters {
            booleanParam (
                defaultValue: false,
                description: 'Select only when you want to do full Deployment',
                name : 'FUll_Deployment')
        }

	environment {
		currentBuildNumber = "${env.BUILD_NUMBER}"
	}

	tools {
            maven 'Maven 3.6.3'
            jdk 'jdk8'

     }
    stages {
        stage('Full Deploy') {
        when {
                        expression {
                            return  params.FUll_Deployment
                        }
        }
            steps {

				sh '/usr/local/bin/kubectl apply -f kube_deployment.yaml '

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'IP=`/usr/local/bin/kubectl describe service books-service | grep IP | awk '{print $2}'`'
                sh 'curl http://${IP}:9090/books'
            }
        }
     }
}
